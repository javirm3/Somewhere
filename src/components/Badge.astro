---
const { color = "green", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "red" | "green";
	title?: string;
}

const colors = {
	red: "bg-brand-red/5 text-brand-red ring-1 ring-brand-red",
	green: "bg-brand-brown/5 text-brand-brown ring-1 ring-brand-brown",
	white: "bg-white",
};
---

<span class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-[13px] font-semibold ${colors[color]}`}
	>{title}</span
>
